{
    "name": "ROS 2 Basler Dev Container",
    "privileged": true,
    "remoteUser": "anyone",
    "build": {
        "dockerfile": "Dockerfile",
        "args": {
            "USERNAME": "anyone"
        },
        "context": "${localWorkspaceFolder}"
    },
    "workspaceFolder": "/home/anyone/boxfish",
    "workspaceMount": "source=${localWorkspaceFolder}/src,target=/home/anyone/boxfish/src,type=bind",
    "customizations": {
        "vscode": {
            "extensions": [
                "charliermarsh.ruff",
                "donjayamanne.githistory",
                "donjayamanne.python-extension-pack",
                "ms-iot.vscode-ros",
                "ms-vscode.cpptools-themes",
                "ms-vscode.cpptools",
                "streetsidesoftware.code-spell-checker",
                "twxs.cmake",
                "yzhang.markdown-all-in-one"
            ]
        }
    },
    "containerEnv": {
        "DISPLAY": "unix:0",
        "ROS_LOCALHOST_ONLY": "1",
        "ROS_DOMAIN_ID": "42"
    },
    "runArgs": [
        "--net=host",
        "-e",
        "DISPLAY=${env:DISPLAY}"
    ],
    "mounts": [
        "source=/tmp/.X11-unix,target=/tmp/.X11-unix,type=bind,consistency=cached",
        "source=/dev/dri,target=/dev/dri,type=bind,consistency=cached"
    ],
    "postStartCommand": "mkdir -p .vscode && cp /tmp/c_cpp_properties.json .vscode/c_cpp_properties.json"
}